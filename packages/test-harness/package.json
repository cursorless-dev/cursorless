{
  "name": "@cursorless/test-harness",
  "version": "0.1.0",
  "description": "Contains scripts and runners for testing Cursorless",
  "private": true,
  "main": "./out/index.js",
  "scripts": {
    "test": "env CURSORLESS_TEST=true my-ts-node src/scripts/runTestsCI.ts",
    "compile": "tsc --build",
    "build": "esbuild ./src/runners/extensionTests.ts --conditions=cursorless:bundler --bundle --outfile=dist/extensionTests.cjs --external:vscode --format=cjs --platform=node",
    "buildTests": "esbuild --conditions=cursorless:bundler --bundle --outdir=dist --external:vscode --format=cjs --platform=node --out-extension:.js=.cjs $(find .. -name '*.test.ts')",
    "watch": "tsc --build --watch",
    "clean": "rm -rf ./out tsconfig.tsbuildinfo ./dist",
    "generate-test-subset-file": "my-ts-node ./src/scripts/generateTestSubsetFile.ts --always-open",
    "generate-test-subset-file-strict": "my-ts-node ./src/scripts/generateTestSubsetFile.ts --fail-if-not-exists"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@cursorless/common": "workspace:*",
    "glob": "^7.1.7"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^10.0.3",
    "@vscode/test-electron": "^2.1.3",
    "esbuild": "^0.17.11",
    "mocha": "^10.2.0"
  },
  "types": "./out/index.d.ts",
  "exports": {
    ".": {
      "cursorless:bundler": "./src/index.ts",
      "default": "./out/index.js"
    }
  },
  "type": "module"
}
