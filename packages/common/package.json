{
  "name": "@cursorless/common",
  "version": "0.1.0",
  "description": "Common utilities for use anywhere in our codebase",
  "main": "./out/index.js",
  "scripts": {
    "compile": "esbuild ./src/index.ts --sourcemap --format=esm --bundle --packages=external --outfile=./out/index.js",
    "watch": "tsc --build --watch",
    "clean": "rm -rf ./out tsconfig.tsbuildinfo ./dist ./build",
    "watch:esbuild": "pnpm compile --watch"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.21",
    "vscode-uri": "^3.0.6"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.2",
    "@types/lodash": "4.14.181",
    "@types/mocha": "^10.0.3",
    "@types/sinon": "^10.0.2",
    "esbuild": "^0.17.11",
    "js-yaml": "^4.1.0",
    "mocha": "^10.2.0",
    "sinon": "^11.1.1"
  },
  "types": "./out/index.d.ts",
  "exports": {
    ".": {
      "cursorless:bundler": "./src/index.ts",
      "default": "./out/index.js"
    }
  },
  "bin": {
    "my-ts-node": "./scripts/my-ts-node.sh"
  },
  "type": "module"
}
