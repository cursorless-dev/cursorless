{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "es2020"],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "ts-node": {
    "esm": true
  },
  "references": [
    {
      "path": "../cheatsheet"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "src/**/*.tsx",
    "../../typings/**/*.d.ts"
  ]
}
