{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "out",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ]
  },
  "references": [
    {
      "path": "../common"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "src/**/*.tsx",
    "../../typings/**/*.d.ts",
  ]
}