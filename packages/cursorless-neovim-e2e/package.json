{
  "name": "@cursorless/cursorless-neovim-e2e",
  "version": "1.0.0",
  "description": "Our neovim end-to-end tests",
  "main": "./out/index.cjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile:tsc": "tsc --build",
    "compile:esbuild": "esbuild ./src/index.ts --sourcemap --format=cjs --bundle --packages=external --outfile=./out/index.cjs --platform=node",
    "compile": "pnpm compile:tsc && pnpm compile:esbuild",
    "watch:tsc": "pnpm compile:tsc --watch",
    "watch:esbuild": "pnpm compile:esbuild --watch",
    "watch": "pnpm run --filter @cursorless/cursorless-neovim-e2e --parallel '/^watch:.*/'",
    "clean": "rm -rf ./out tsconfig.tsbuildinfo ./dist ./build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "types": "./out/index.d.ts",
  "exports": {
    ".": {
      "cursorless:bundler": "./src/index.ts",
      "default": "./out/index.cjs"
    }
  },
  "dependencies": {
    "@cursorless/common": "workspace:*",
    "@cursorless/neovim-common": "workspace:*",
    "@types/chai": "4.3.14",
    "@types/js-yaml": "4.0.9",
    "@types/lodash": "4.17.0",
    "@types/sinon": "^17.0.3"
  }
}
