{
  "name": "@cursorless/cursorless-talon-js",
  "version": "1.0.0",
  "description": "cursorless in talon js",
  "main": "./out/talon.js",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "esbuild:base": "tsx esbuild.ts",
    "esbuild": "pnpm run esbuild:base --sourcemap",
    "esbuild:meta": "pnpm run esbuild:base --metafile=meta.json",
    "esbuild:watch": "pnpm run esbuild:base --sourcemap --watch",
    "esbuild:prod": "pnpm run esbuild:base --minify",
    "clean": "rm -rf ./out tsconfig.tsbuildinfo ./dist ./build",
    "depcruise": "depcruise --no-config --exclude '^node_modules' src/extension.ts > dependencies.json",
    "depcruise_dot": "depcruise --no-config --exclude '^node_modules' --output-type dot src/extension.ts > dependencies.dot",
    "ts_dependency_graph": "ts_dependency_graph -v --start src/extension.ts > dependencies.txt"
  },
  "dependencies": {
    "@cursorless/common": "workspace:*",
    "@cursorless/cursorless-engine": "workspace:*",
    "lodash-es": "^4.17.21",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/lodash-es": "4.17.0",
    "dependency-cruiser": "^16.3.6",
    "ts_dependency_graph": "^2.1.1"
  }
}
