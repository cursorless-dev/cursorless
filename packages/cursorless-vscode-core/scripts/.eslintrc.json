{
  "rules": {
    "@typescript-eslint/no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["@cursorless/cursorless-vscode-core", "../../*"],
            "message": "Scripts have restricted dependencies"
          }
        ],
        "paths": [
          {
            "name": "vscode",
            "message": "Scripts shouldn't depend on vscode"
          }
        ]
      }
    ]
  }
}
