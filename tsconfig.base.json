{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "emitDeclarationOnly": true,
    "target": "es6",
    "lib": ["es2022"],
    "declarationMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true
  }
}
