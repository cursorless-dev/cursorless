{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "target": "es6",
    "lib": ["es2021"],
    "sourceMap": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
