{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "target": "es6",
    "lib": ["es2022"],
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/out"
  }
}
